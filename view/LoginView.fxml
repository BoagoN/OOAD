<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      prefWidth="400" prefHeight="450"
      style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);">

   
    <VBox alignment="CENTER" spacing="10">
        <!-- App Icon -->
        <Label text="🏦" style="-fx-font-size: 40px;"/>

        <!-- App Title -->
        <Label text="Banking System"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;"/>

        <!-- Subtitle -->
        <Label text="Secure Login"
               style="-fx-font-size: 14px; -fx-text-fill: #e0e0e0;"/>
    </VBox>


   
    <VBox alignment="CENTER" spacing="15"
          prefWidth="350"
          style="-fx-background-color: white;
                 -fx-background-radius: 10;
                 -fx-padding: 30;
                 -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 0);">

        <!-- Card Title -->
        <Label text="Welcome Back"
               style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

        <!-- Email Field -->
        <VBox spacing="8" prefWidth="250">
            <Label text="Email" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
            <TextField fx:id="emailField"
                       promptText="Enter your email"
                       style="-fx-background-radius: 5;
                              -fx-border-color: #ddd;
                              -fx-border-radius: 5;"/>
        </VBox>

        <!-- PIN Field -->
        <VBox spacing="8" prefWidth="250">
            <Label text="PIN" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
            <PasswordField fx:id="pinField"
                           promptText="Enter your PIN"
                           style="-fx-background-radius: 5;
                                  -fx-border-color: #ddd;
                                  -fx-border-radius: 5;"/>
        </VBox>

        <!-- Sign In Button -->
        <Button fx:id="loginButton" text="Sign In"
                style="-fx-background-color: #4CAF50;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-background-radius: 5;
                       -fx-pref-width: 250;
                       -fx-pref-height: 35;"/>

        <!-- Message Label -->
        <Label fx:id="messageLabel"
               text="Enter your credentials to continue"
               style="-fx-text-fill: #666; -fx-font-size: 12px;"/>

    </VBox>


    
    <VBox alignment="CENTER" spacing="5">
        <Label text="Don't have an account?"
               style="-fx-text-fill: white;"/>

        <Hyperlink text="Contact your branch manager"
                   style="-fx-text-fill: #e0e0e0;
                          -fx-border-color: transparent;"/>
    </VBox>

</VBox>
